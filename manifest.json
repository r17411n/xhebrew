{
    "manifest_version": 3,
    "name": "xhebrew",
    "version": "0.1.0",
    "description": "Replace text on X/Twitter pages (find & replace mappings).",
    "permissions": [
        "storage"
    ],
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*", "https://x.com/*"],
            "js": ["xhebrew.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://translate.googleapis.com/*",
        "https://translation.googleapis.com/*"
    ]
}