{
    "manifest_version": 2,
    "name": "xhebrew",
    "version": "0.1.0",
    "description": "Replace text on X/Twitter pages (find & replace mappings).",
    
    "icons": {
        "16": "icons/page-16.png",
        "32": "icons/page-32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://www.twitter.com/*",
                "https://x.com/*",
                "https://www.x.com/*",
                "https://*.x.com/*"
            ],
            "js": ["xhebrew.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "activeTab",
        "cookies",
        "browsingData",
        "webRequest",
        "tabs",
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*",
        "https://*.x.com/*",
        "https://translate.googleapis.com/*",
        "https://translation.googleapis.com/*",
        "<all_urls>"
    ]
}